<div class="row">
  <p id="notice"><%= notice %></p>
  <div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Kitties</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered dataTable" id="" width="100%" cellspacing="0">
                <thead>
                    <tr>
                      <th>Name</th>
                      <th colspan="3">Actions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                      <th>Name</th>
                      <th colspan="3">Actions</th>
                    </tr>
                </tfoot>
              <tbody>
                <% @kitties.each do |kitty| %>
                  <tr>
                    <td><%= kitty.name %></td>
                    <td><%= link_to 'Show', kitty %></td>
                    <td><%= link_to 'Edit', edit_kitty_path(kitty) %></td>
                    <td><%= link_to 'Destroy', kitty, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
        </div>
        <br>

        <%= link_to 'New Kitty', new_kitty_path %>
    </div>
  </div>
</div>
<%= javascript_pack_tag 'kitties', 'data-turbolinks-track': 'reload' %>
